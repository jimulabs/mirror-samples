<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

    <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/preview_image"
            android:layout_height="@dimen/preview_image_height"
            android:layout_width="@dimen/preview_image_width"/>

    <TextView
            android:id="@+id/file_size"
            android:layout_height="@dimen/preview_file_size_height"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/file_size_padding"
            android:paddingRight="@dimen/file_size_padding"
            android:layout_alignTop="@id/preview_image"
            android:layout_alignRight="@id/preview_image"
            android:layout_marginTop="@dimen/preview_file_size_margin"
            android:layout_marginRight="@dimen/preview_file_size_margin"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/preview_attachment_file_size_text_size"
            android:background="@color/file_size_color"

            />
</RelativeLayout>