<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:mirrormail="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:minHeight="@dimen/drawer_avatar_list_item_height">

    <com.jimulabs.samples.mirrormail.CircularImageView
            android:id="@+id/drawer_avatar"
            android:layout_width="@dimen/drawer_avatar_width"
            android:layout_height="@dimen/drawer_avatar_width"
            android:layout_gravity="center"
            mirrormail:borderColor="@android:color/white"
            mirrormail:borderSize="@dimen/drawer_avatar_border_size"/>


    <ImageView
            android:id="@+id/active_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/active_check"/>


</FrameLayout>